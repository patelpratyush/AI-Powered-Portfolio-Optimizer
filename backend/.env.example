# Environment Configuration
FLASK_ENV=development
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///portfolio_optimizer.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000

# ML Model Configuration
MODEL_DIR=models/saved
TRAINING_TIMEOUT=1800
MAX_TRAINING_WORKERS=3

# External APIs
YAHOO_FINANCE_TIMEOUT=10
RATE_LIMIT_PER_MINUTE=100

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@portfoliooptimizer.com

# WebSocket Configuration
WEBSOCKET_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Background Tasks
ENABLE_BACKGROUND_TASKS=True
PRICE_ALERT_CHECK_INTERVAL=300