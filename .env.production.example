# Production Environment Configuration
# Copy this file to .env for production deployment

# Application Environment
FLASK_ENV=production
DEBUG=false
TESTING=false

# Security Configuration (REQUIRED - Generate secure random values)
SECRET_KEY=your-super-secret-key-minimum-32-characters-long
JWT_SECRET_KEY=your-jwt-secret-key-minimum-32-characters-long
ENCRYPTION_KEY=your-encryption-key-for-secrets-management

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@localhost:5432/portfolio_optimizer
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30

# Redis Configuration (RECOMMENDED for production performance)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100

# CORS Configuration (REQUIRED - Never use * in production)
CORS_ORIGINS=https://your-frontend-domain.com,https://your-app-domain.com

# Email Configuration (OPTIONAL - for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
MAIL_FROM=noreply@your-domain.com

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ML Model Configuration
MODEL_CACHE_SIZE=50
MODEL_TRAINING_TIMEOUT=3600
BATCH_PREDICTION_SIZE=100

# Monitoring Configuration
LOG_LEVEL=WARNING
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# External Services
YAHOO_FINANCE_TIMEOUT=30
MARKET_DATA_CACHE_TTL=300

# File Upload Configuration
MAX_CONTENT_LENGTH=67108864  # 64MB
UPLOAD_FOLDER=/tmp/uploads

# SSL/TLS Configuration (RECOMMENDED for production)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Gunicorn Configuration (if using Gunicorn)
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=5

# Application Version and Metadata
VERSION=1.0.0
BUILD_DATE=2024-01-01
GIT_COMMIT=unknown

# Resource Limits
CPU_LIMIT=2
MEMORY_LIMIT=2Gi
WORKER_CONNECTIONS=1000

# Security Headers
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';

# Backup Configuration (if using automated backups)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Alerting Configuration
ALERT_EMAIL=admin@your-domain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ML_PREDICTIONS=true
ENABLE_PORTFOLIO_OPTIMIZATION=true
ENABLE_WEBSOCKETS=true

# Third-party Integration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key